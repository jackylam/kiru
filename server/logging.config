[loggers]
keys=root,kiru,dbpool,dnsquery

[handlers]
keys=rotatingHandler

[formatters]
keys=simpleFormatter

[logger_root]
level=INFO
handlers=rotatingHandler

[logger_kiru]
level=INFO
handlers=rotatingHandler
qualname=kiru
propagate=0

[logger_dbpool]
level=INFO
handlers=rotatingHandler
qualname=dbpool
propagate=0

[logger_dnsquery]
level=INFO
handlers=rotatingHandler
qualname=dnsquery
propagate=0

[handler_rotatingHandler]
class=handlers.RotatingFileHandler
level=NOTSET
args=('kiru.log','a',2000,100)
formatter=simpleFormatter

[handler_consoleHandler]
class=StreamHandler
level=INFO
formatter=simpleFormatter
args=(sys.stdout,)

[formatter_simpleFormatter]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s
datefmt=
